# Celery Worker Environment Configuration

# Worker Mode
WORKER_MODE=celery

# Backend Configuration
SECRET_KEY=your-production-secret-key-change-this
FLASK_ENV=production
DEBUG=false

# File Configuration
UPLOAD_FOLDER=/data/uploads
OUTPUT_FOLDER=/data/outputs
MAX_CONTENT_LENGTH=524288000

# Redis Configuration (update with actual Coolify Redis URL)
# Example: REDIS_URL=redis://default:MyStrongPass@redis-database-vk0kgkg0:6379/0
REDIS_URL=redis://redis:6379/0

# Celery Optimization
CELERY_CONCURRENCY=3
CELERY_PREFETCH_MULTIPLIER=1

# Video Processing Optimization
FFMPEG_THREADS=16
VIDEO_QUALITY=ultrafast
GPU_ACCELERATION=true
